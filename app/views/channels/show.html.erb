<div class="channel-container"></div>
  <div class="col-3">
    <%= render "shared/slidebar", channels: @channels %>
  </div>
<div class="chat">
    <h3>
        #<%= @channel.name  %>
    </h3>
    <p>
    
        <% if  @channel.is_public == 0 %>
            <%= link_to "加成員", member_add_path(@channel.id), method: :get, remote: true %>
        <% end %>
    </p>
</div>

    
  <div class="col-9">
    <% if @channel.present? %>

      <nav class="chat-navbar">
          <span class="navbar-brand"><%= @channel.name %></span>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= current_user.email %>
            </li>
          </ul>
      </nav>

      <div class="chat-channel" data-controller="channel-messages" data-channel-messages-channelid=<%= @channel.id %>>

        <div id="messages-container">
          <% @channel.messages.each do |message| %>
            <%= render "messages/message", message: message %>
          <% end %>     
        </div>

        <div class="chat-box">
          <%= render "messages/form", message: Message.new, channel: @channel %>  
        </div>
      </div>

    <% end %>
  </div>  
</div>