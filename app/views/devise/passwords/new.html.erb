<div class="text-center">

  <div class="pt-8 flex justify-center">  
    <%= link_to root_path do %>
      <%= image_tag 'logo_index.png' %>
    <% end %>
  </div>

  <div class="pt-12 text-xl"> 
    忘記密碼?
  </div>

  <div> 
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  </div>

  <div> 
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  
   <div class="w-2/3 md:w-1/3 mx-auto py-4 text-center">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "請輸入電子信箱", class: "signupInput" %>
  </div>


  <div class="w-2/3 md:w-1/3 mx-auto py-8 text-center ">
    <p class="text-xl">發送重置密碼通知</p>
    <div class=" pt-4">
      <%= f.submit "發送" ,class: "cursor-pointer text-white signupInput bg-stork-blue" %>
      <% end %>
    </div>

    <div class="pt-5 text-right" >
        <%- if controller_name != 'sessions' %>
          <%= link_to "登入", new_session_path(resource_name), class: '' %>
        <% end %>
    </div>

  </div>

</div>