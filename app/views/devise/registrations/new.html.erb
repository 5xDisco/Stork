<div>
  <div class="py-8 pt-20 flex justify-center">  
    <%= link_to root_path do %>
    <%= image_tag 'stork_logo_s.png' %>
    <% end %>
  </div>

  <div>
    <p class="py-3 text-center text-4xl">首先, 輸入你的電子郵件</p>
    <p class="py-3 text-center text-xl">我們建議使用你的工作電子郵件地址。</p>
  </div>
  
  <div class="py-3 focus:text-center ">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="py-3 text-center ">
    <div>
      <%= f.label :信箱 ,class:"text-xl" %>
    </div>

    <div class="py-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "輸入電子信箱", class: "bg-purple-100 text-center text-xl  px-16 py-2 border-solid border-4 border-blue-700 border-light-purple-400" %>
    </div>
  </div>

  <div class="py-2 text-center">
    <%= f.label :輸入密碼 ,class:"text-xl" %>
    <% if @minimum_password_length %><br>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>
  
  <div class="py-3 text-center">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "輸入密碼",class: "bg-purple-100 text-center text-xl px-16 py-2 border-solid border-4 border-blue-700 border-light-purple-400" %>
  </div>

  <div class="py-4 text-center">
    <div>
      <%= f.label :再次確認密碼 ,class:"text-xl" %>
    </div>

    <div class="py-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再次確認密碼",class: "bg-purple-100 text-center text-xl px-16 py-2 border-solid border-4 border-blue-700 border-light-purple-400" %>
    </div>
  </div>

  <div class="pt-1 text-center text-xl text-purple-700 ">
    <%= f.submit "註冊", class:"bg-purple-500 text-white px-16 py-2 border-solid border-4 "%> 
  </div>
  <% end %>

</div>
