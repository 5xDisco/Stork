<div class="login-wrapper border-indigo-900 border-2  mx-auto mt-10">
  <!-- logo -->
  <div class="py-4 mx-auto flex justify-center">  
    <%= link_to root_path do%>
    <%= image_tag 'logo_index.png' %>
    <% end %>
  </div>
  
  <!-- header & logo -->
  <div class="py-6">
    <p class="font-semibold text-5xl text-center">登入 Stork</p> 
    <!-- <p class="py-2 text-xl text-center">
      建議使用你工作用的<span class="font-bold">電子郵件地址</span>。  
    </p> -->
  </div>
  
  <!-- form-login start -->
  <div id="form-login" class="flex flex-col justify-center border-2 border-pink-600 w-3/4 md:w-2/5 mx-auto p-2">
    <!-- google login -->

    <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to " 使用Google登入 ", omniauth_authorize_path(resource_name, provider), method: :post , class: "py-2 text-center text-xl border-2 text-blue-600 border-blue-600 rounded-md hover:shadow-lg transition:delay-100 hover:no-underline text-blue-600"  %>
    <% end %>




    <div class="mt-1">
      <%= form_for(resource, as: resource_name, url: user_session_path ) do |f| %>
      <p class="text-center text-xl"><%= f.label :帳號 %>    
      </p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "輸入電子信箱", class: " text-xl px-4 py-2" %>
    </div>
  
    <div class="mt-8">
      <p class="text-center text-xl">
        <%= f.label :密碼 %>
      </p>  
      
      <p class="text-center text-3xl">
        <%= f.password_field :password, autocomplete: "current-password",placeholder: "輸入密碼", class: "text-xl px-4 py-2" %>
      </p>
      
      <div class="py-6 text-center  text-2xl">
        <%= f.submit "登入" %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- end of form-login -->
  







  <div class="mt-10">
    
    <p class="text-center text-xl">
      第一次使用Stork嗎？
    </p>
    
    <div class="mt-3 text-center text-2xl actions">
      
      
      
      <div>
        <div class="py-6 text-center  text-2xl text-purple-700 ">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "註冊", new_registration_path(resource_name) , class: "bg-purple-300 p-15" %><br />
          <% end %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "忘記密碼?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>
  <!-- End of login-wrapper -->
  <!-- End of login-wrapper -->
