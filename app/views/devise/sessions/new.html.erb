
<div>

    <%= form_for(resource, as: resource_name, url: user_session_path ) do |f| %>

  <div class="pt-8 flex justify-center">  
    <%= link_to root_path do %>
      <%= image_tag 'logo_index.png' %>
    <% end %>
  </div>

  <div class="py-10">
    <p class="font-semibold focus-within:font-bold text-5xl text-center">
      登入 Stork
    </p>
   
    <p class="py-2 text-xl text-center">
      建議使用你工作用的<span class="font-bold">電子郵件地址</span>。  
    </p>
  </div>

  <div class="mt-1">
    <p class="text-center text-xl">
      <%= f.label :帳號 %>
    </p>

    <p class="text-center text-3xl">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "輸入電子信箱", class: "text-xl  px-4 py-2 text-xl px-4 py-2 border-solid border-4 border-blue-700 border-light-purple-400" %>
    </p>
  </div>

  <div class="mt-8">
    <p class="text-center text-xl">
      <%= f.label :密碼 %>
    </p>  

    <p class="text-center text-3xl">
      <%= f.password_field :password, autocomplete: "current-password",placeholder: "輸入密碼", class: "text-xl  px-4 py-2 text-xl px-4 py-2 border-solid border-4 border-blue-700 border-light-purple-400" %>
    </p>
  
    <div class="py-6 text-center  text-2xl text-purple-700 ">
      <%= f.submit "登入" %>
      <% end %>
    </div>
  </div>

  <div class="mt-10">
    <p class="text-center text-xl">
      第一次使用Stork嗎？
    </p>
  
    <div class="mt-3 text-center text-2xl text-purple-600 actions">
      <%= render "devise/shared/links"%>
    </div>
  </div>
</div>
</div>
