
<div class="wallpaper" data-controller="channelbox" data-channelbox-target="page">
  <div class="dialog-box">
    <h2 class="text-3xl pt-4 pb-4">編輯個人檔案</h2>
    <button data-action="click->channelbox#close" class="close hover:bg-gray-100 py-2 px-4 rounded text-xl" >X</button>

    <%= form_for(user, url: registration_path(user), class: "flex justify-center items-center outline-black" , html: { method: :put }) do |f| %>
        <div class="field">
          <%= f.label :email, "class"=>"font-bold" %> <br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", "class"=>"w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none mb-4", disabled: true %>
        </div>

        <div class="field">
          <%= f.label :nickname,"顯示名稱",autofocus: true, "class"=>"font-bold" %>  <br>
          <%= f.text_field :nickname,"class"=>"w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none mb-4" %>
        </div>

        <div class="field">
          <%= f.label :avatar, "頭像","class"=>"font-bold" %> <br>
          <%= f.file_field :avatar %>
        </div>

        <div class="relative">
          <%= f.submit "送出", "class"=>"bg-gray-300 hover:bg-gray-400 text-block font-bold py-2 px-4 rounded absolute -top-10 right-0" %>
        </div>
    <% end %>
  </div>
</div>
